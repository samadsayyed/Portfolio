---
const projects = [
  {
    title: 'E-commerce Platform',
    description: 'A full-featured online store built with React and Node.js',
    tags: ['React', 'Node.js', 'MongoDB'],
    image: 'https://placehold.co/600x400'
  },
  {
    title: '3D Product Configurator',
    description: 'Interactive 3D product visualization using Three.js',
    tags: ['Three.js', 'React', 'WebGL'],
    image: 'https://placehold.co/600x400'
  },
  {
    title: 'Task Management App',
    description: 'Collaborative project management tool with real-time updates',
    tags: ['Vue.js', 'Laravel', 'PostgreSQL'],
    image: 'https://placehold.co/600x400'
  }
];
---

<section id="projects" class="py-20 bg-secondary">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">What I Did?</h2>
    <p class="text-lg text-primary/80 max-w-2xl mx-auto mb-16">
      A showcase of my recent projects and achievements.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="group relative overflow-hidden rounded-lg shadow-lg">
          <img src={project.image} alt={project.title} class="w-full h-[300px] object-cover" />
          <div class="absolute inset-0 bg-gradient-to-t from-secondary via-secondary/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
            <div class="p-6 w-full">
              <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
              <p class="text-primary/70 mb-4">{project.description}</p>
              <div class="flex gap-2 flex-wrap">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 bg-accent/20 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
